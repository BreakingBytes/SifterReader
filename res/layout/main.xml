<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/domainLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/domain" />

    <EditText
        android:id="@+id/domainEntry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/domainLabel"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/domainHint" />

    <TextView
        android:id="@+id/accessKeyLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/domainEntry"
        android:text="@string/accessKey" />

    <EditText
        android:id="@+id/accessKeyEntry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accessKeyLabel"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/accessKeyHint"
        android:text="779ab91fa637368648921c811e00ba53"
        android:textSize="15sp" />

    <Button
        android:id="@+id/projectsButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accessKeyEntry"
        android:onClick="onClickProjects"
        android:text="@string/projects" />

    <Button
        android:id="@+id/milestonesButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/projectsButton"
        android:onClick="onClickMilestones"
        android:text="@string/milestones" />

    <Button
        android:id="@+id/issuesButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/milestonesButton"
        android:onClick="onClickIssues"
        android:text="@string/issues" />

    <Button
        android:id="@+id/peopleButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/issuesButton"
        android:onClick="onClickPeople"
        android:text="@string/people" />

</RelativeLayout>