<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/issue_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/issue_status"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/issue_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
   <TextView
        android:id="@+id/issue_priority"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/issue_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/issue_subject"
        android:layout_below="@id/issue_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee" />
    
</RelativeLayout>