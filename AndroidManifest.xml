<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.BreakingBytes.SifterReader"
    android:versionCode="3"
    android:versionName="1.8" >

    <uses-sdk android:minSdkVersion="8"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/sifter135"
        android:label="@string/app_name" >
        <activity
            android:name=".SifterReader"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login" >
        </activity>
        <activity
            android:name=".ProjectDetail"
            android:label="Project Details" >
        </activity>
        <activity
            android:name=".MilestonesActivity"
            android:label="Milestones" >
        </activity>
        <activity
            android:name=".MilestoneDetail"
            android:label="Milestone Details" >
        </activity>
        <activity
            android:name=".CategoriesActivity"
            android:label="Categories" >
        </activity>
        <activity
            android:name=".CategoryDetail"
            android:label="Category Details" >
        </activity>
        <activity
            android:name=".PeopleActivity"
            android:label="People" >
        </activity>
        <activity
            android:name=".PeopleDetail"
            android:label="User Details" >
        </activity>
        <activity
            android:name=".IssuesActivity"
            android:label="Issues" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/issues_search" />
        </activity>
        <activity
            android:name=".IssueDetail"
            android:label="Issue Detail" >
        </activity>
        <activity
            android:name=".OopsActivity"
            android:label="Errors" >
        </activity>
    </application>

</manifest>